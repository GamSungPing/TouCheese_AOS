<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 툴바 -->
    <style name="tc_main_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="height">56dp</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- 버튼 -->
    <style name="tc_bt_main_filed" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?android:attr/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tc_bt_main_outlined">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="strokeColor">@color/primary07</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/primary07</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tc_bt_filter">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">83dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey08</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/grey08</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="tc_bt_reservation_state_waiting">
        <item name="android:text">@string/text_reservation_state_waiting</item>
        <item name="android:width">53dp</item>
        <item name="android:height">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/tc_background_filled_grery03</item>
        <item name="android:textColor">@color/grey09</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tc_bt_reservation_state_complete">
        <item name="android:text">@string/text_reservation_state_complete</item>
        <item name="android:width">53dp</item>
        <item name="android:height">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/tc_background_filled_white_outlined_primary07_6</item>
        <item name="android:textColor">@color/primary07</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tc_bt_reservation_state_cancel">
        <item name="android:text">@string/text_reservation_state_cancel</item>
        <item name="android:width">53dp</item>
        <item name="android:height">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/tc_background_filled_white_outlined_red</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tc_bt_reservation_state_usage_done">
        <item name="android:text">@string/text_reservation_state_usage_done</item>
        <item name="android:width">53dp</item>
        <item name="android:height">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/tc_background_filled_primary05</item>
        <item name="android:textColor">@color/grey09</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 다이얼로그 -->
    <style name="tc_alert_dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">?android:attr/colorPrimary</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>


    <!-- 예약 카드, 이미지 카드-->
    <style name="tc_card_view_outlined_grey03_large">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/grey03</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="tc_card_view_outlined_grey03_medium">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/grey03</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="tc_card_view_outlined_grey03_small">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/grey03</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">6dp</item>
    </style>


    <!-- 리뷰 댓글 -->
    <style name="tc_card_view_outlined_grey02_large">
        <item name="android:backgroundTint">@color/grey01</item>
        <item name="strokeColor">@color/grey02</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>